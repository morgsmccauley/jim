{
  "include": [
    "App/**/*"
  ],
  "exclude": [
    "node_modules",
    "App/**/*.spec.*"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
